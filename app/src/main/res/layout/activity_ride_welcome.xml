<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Ride_Welcome_Activity"
    android:background="@drawable/login"
    android:padding="16dp">

    <Button
        android:id="@+id/wel_cust_btn"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_marginBottom="28dp"
        android:backgroundTint="#000000"
        android:fontFamily="serif"
        android:gravity="center"
        android:text="@string/click_if_you_are_a_customer"
        android:textColor="#FFC107"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/wel_drive_btn"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_marginBottom="16dp"
        android:backgroundTint="#000000"
        android:fontFamily="serif"
        android:gravity="center"
        android:text="@string/click_if_you_are_a_driver"
        android:textColor="#FFC107"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/wel_cust_btn"
        app:layout_constraintEnd_toEndOf="@+id/wel_cust_btn"
        app:layout_constraintStart_toStartOf="@+id/wel_cust_btn" />
</androidx.constraintlayout.widget.ConstraintLayout>